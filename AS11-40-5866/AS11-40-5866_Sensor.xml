<scene version="0.5.1">
	<sensor id="Hasselblad-camera" type="perspective">
		<float name="farClip" value="100"/>
		<float name="fov" value="48.3233"/>
		<string name="fovAxis" value="x"/>
		<float name="nearClip" value="0.1"/>
		<transform name="toWorld">

			<lookat target="-7.53594, 1.80523, 4.50613" origin="-8.23174, 1.62149, 5.20047" up="-0.107422, 0.982473, 0.152337"/>
		</transform>

		<sampler type="halton">
			<integer name="sampleCount" value="128"/>
		</sampler>

		<film type="ldrfilm">
			<boolean name="banner" value="true"/>
			<float name="exposure" value="0.0000"/>
			<string name="fileFormat" value="png"/>
			<boolean name="fitHorizontal" value="false"/>
			<float name="gamma" value="-1"/>
			<integer name="height" value="1080"/>
			<boolean name="highQualityEdges" value="false"/>
			<string name="label[10,10]" value="Integrator:$integrator['type'], $film['width']x$film['height'],$sampler['sampleCount']spp, rendertime:$scene['renderTime'],memory:$scene['memUsage']"/>
			<float name="pixelAspectX" value="1"/>
			<float name="pixelAspectY" value="1"/>
			<string name="pixelFormat" value="rgb"/>
			<float name="shiftX" value="0"/>
			<float name="shiftY" value="0"/>
			<string name="tonemapMethod" value="gamma"/>
			<integer name="width" value="1080"/>

			<rfilter type="gaussian"/>
		</film>
	</sensor>
</scene>
